{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016"],
    "declaration": false,
    "module": "commonjs",
    "newLine": "LF",
    "removeComments": true,
    "experimentalDecorators": true,
    "pretty": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
